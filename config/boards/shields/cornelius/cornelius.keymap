#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/pointing.h>

/ {
        keymap {
                compatible = "zmk,keymap";

                default_layer {
// ---------------------------------------------------------------------------------
// | `   |  Q  |  W  |  F  |  P  |  B  |                                |  J  |  L  |  U  |  Y  |  ;  | BSPC |
// |TAB  |  A  |  R  |  S  |  T  |  G  |BT_CLR|               |BT CLR   |  M  |  N  |  E  |  I  |  O  |  '   |
// |SHFT |  Z  |  X  |  C  |  D  |  V  | ESC |                  |VolD   |  K  |  H  |  ,  |  .  |  /  | SHFT |
//                         | GUI | ALT | CRL |                |BSPC | SPC |Raise|
                        bindings = <
    &kp GRAVE   &kp Q       &kp W       &kp F       &kp P           &kp B                                   &kp J   &kp L       &kp U       &kp Y       &kp SEMI    &kp BSPC
    &kp TAB     &mt LGUI A  &mt LALT R  &mt LCTRL S &mt LSHIFT T    &kp G  &bt BT_CLR       &bt BT_CLR      &kp M   &mt SHIFT N &mt RCTRL E &mt RALT I  &mt RGUI O  &kp APOSTROPHE
    &kp LSHFT   &kp Z       &kp X       &kp C       &kp D           &kp V  &kp C_VOL_DN     &kp C_VOL_DN    &kp K   &kp H       &kp COMMA   &kp DOT     &kp SLASH   &kp RSHIFT
                                        &kp LGUI    &kp LALT        &kp LCTRL                              &kp BSPC &kp SPACE   &mo 1
                        >;
                };
